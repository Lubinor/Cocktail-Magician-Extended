@model CityViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bars)
        </dt>
        <dd class="col-sm-10">
            @foreach (var bar in Model.Bars)
            {
                <a style="margin: 0 2px;" class="btn btn-outline-danger font-weight-bold" href="/bars/Details/@bar.Id">@bar.Name</a>
            }
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Cocktail Magician"))
    {
        <a style="margin: 0 2px;" class="btn btn-primary font-weight-bold" href="/Cities/Edit/@Model.Id">Edit</a>
        <a style="margin: 0 2px;" class="btn btn-primary font-weight-bold" href="/Cities/Delete/@Model.Id">Delete</a>
    }
    <a style="margin: 0 2px;" class="btn btn-primary font-weight-bold" href="/Cities/Index/">Back to List</a>
</div>
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
