@model CocktailMagician.Web.Models.CreateCocktailReviewViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<link href="http://netdna.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.css" rel="stylesheet">*@
@*<link href="http://netdna.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.css" rel="stylesheet">
<link href="~/StarRating/css/star-rating.css" media="all" rel="stylesheet" type="text/css" />*@

<h1 style="color:white">Create</h1>

<h4 style="color:white">Cocktail Review</h4>
<hr />
<div class="row" style="color:white">
    <div class="col-md-6">
        <form asp-action="Create" asp-route-id="@Model.CocktailId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" class="form-control" rows="3" style="width:60%;resize:none"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group col-md-7">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div>
                <input type="hidden" asp-for="@Model.CocktailId" value="@Model.CocktailId" />
            </div>
            @if (User.IsInRole("Bar Crawler"))
            {
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary font-weight-bold" />
                </div>
            }
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary font-weight-bold" asp-controller="Cocktails" asp-action="Details"
       asp-route-id="@Model.CocktailId">Back to Cocktail</a>
    <a class="btn btn-primary font-weight-bold" asp-controller="Cocktails" asp-action="Index">Back to List</a>
</div>

@section Scripts {
