@model CocktailMagician.Web.Models.CreateCocktailViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />
<h1 style="color:white">Create</h1>

<hr />
<div class="row" style="color:white">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">New Cocktail Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select class="selectpicker" asp-for="@Model.ContainedIngredients" asp-items="@ViewBag.Ingredients"
                        multiple data-live-search="true">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input type="file" asp-for="File" id="files">
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            @if (User.IsInRole("Cocktail Magician"))
            {
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary font-weight-bold" style="border-radius:.75rem" />
                <a class="btn btn-primary font-weight-bold" style="border-radius:.75rem" asp-controller="Cocktails" asp-action="Index">Back to List</a>
                </div>
            }
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
